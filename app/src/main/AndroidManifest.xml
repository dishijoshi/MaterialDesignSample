<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.azilen.android.materialdesignsample" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ElevationActivity"></activity>
        <activity android:name=".SlidingTabActivity"></activity>
        <activity android:name=".RippleEffectActivity"></activity>
        <activity android:name=".RevealEffectActivity"></activity>
        <activity android:name=".ShowErrorActivity"></activity>
        <activity android:name=".FadingActionBarActivity"></activity>
        <activity android:name=".TransitionFirstActivity"></activity>
        <activity android:name=".TransitionSecondActivity"></activity>
        <activity android:name=".ColorActivity"></activity>
        <activity android:name=".FloatingButtonActivity"></activity>
        <activity android:name=".NavigationDrawerActivity"></activity>

    </application>

</manifest>
